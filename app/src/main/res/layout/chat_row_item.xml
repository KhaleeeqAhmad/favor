<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile_pic_chatsitem"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_username_chatsitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/iv_profile_pic_chatsitem"
        app:layout_constraintStart_toEndOf="@id/iv_profile_pic_chatsitem"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/tv_lastmessaage_chatsitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="recent message here"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_username_chatsitem"
        app:layout_constraintStart_toStartOf="@id/tv_username_chatsitem"
        />

    <TextView
        android:id="@+id/tv_timestamp_chatitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="00:00 pm"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_lastmessaage_chatsitem" />
</androidx.constraintlayout.widget.ConstraintLayout>

