<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/postImageRecent"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/border_post_button"
        android:scaleType="centerCrop"
        android:layout_marginStart="5dp"
        android:contentDescription="@string/your_recent_post"
        android:src="@drawable/place_holder_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/postDescriptionRecent"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:text="@string/affirmation6"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/postImageRecent"
        app:layout_constraintStart_toStartOf="@+id/postImageRecent"
        app:layout_constraintTop_toBottomOf="@+id/postImageRecent" />
</androidx.constraintlayout.widget.ConstraintLayout>